<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameActivity">

    <TextView
        android:id="@+id/textViewPlayer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="Player A"
        android:textColor="#090909"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewRoom" />

    <TextView
        android:id="@+id/textViewRoom"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="Room"
        android:textColor="#090909"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewPlayer">

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@color/grey_800"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button4"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="2dp"
                    android:textColor="#0E0E0E"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/button5"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="2dp"
                    android:textColor="#0E0E0E"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/button6"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="2dp"
                    android:textColor="#0E0E0E"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/button7"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginRight="2dp"
                    android:textColor="#0E0E0E"
                    android:textSize="30sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button8"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="2dp"
                    android:textColor="#0E0E0E"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/button9"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="2dp"
                    android:textColor="#0E0E0E"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/button10"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="2dp"
                    android:textColor="#0E0E0E"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/button11"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginRight="2dp"
                    android:textColor="#0E0E0E"
                    android:textSize="30sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button12"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="2dp"
                    android:textColor="#0E0E0E"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/button13"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="2dp"
                    android:textColor="#0E0E0E"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/button14"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="2dp"
                    android:textColor="#0E0E0E"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/button15"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginRight="2dp"
                    android:textColor="#0E0E0E"
                    android:textSize="30sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button16"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:textColor="#0E0E0E"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/button17"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:textColor="#0E0E0E"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/button18"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:textColor="#0E0E0E"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/button19"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginBottom="2dp"
                    android:textColor="#0E0E0E"
                    android:textSize="30sp" />
            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/buttonNewGame"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/reload"
            app:layout_constraintEnd_toEndOf="@+id/linearLayout4"
            app:layout_constraintEnd_toStartOf="@+id/buttonNewRoom"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout4" />

        <Button
            android:id="@+id/buttonNewRoom"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/waitingroom"
            app:layout_constraintEnd_toEndOf="@+id/linearLayout4"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout4" />

        <TextView
            android:id="@+id/textViewPlayer2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="New Game"
            android:textColor="#575454"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@+id/buttonNewGame"
            app:layout_constraintStart_toStartOf="@+id/buttonNewGame"
            app:layout_constraintTop_toBottomOf="@+id/buttonNewGame" />

        <TextView
            android:id="@+id/textViewPlayer4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="New Room"
            android:textColor="#575454"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@+id/buttonNewRoom"
            app:layout_constraintStart_toStartOf="@+id/buttonNewRoom"
            app:layout_constraintTop_toBottomOf="@+id/buttonNewGame" />

        <TextView
            android:id="@+id/textViewHistory"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-4dp"
            android:background="@color/amber_50"
            android:gravity="center"
            android:text="History"
            android:textColor="#575454"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/textViewPlayer2"
            app:layout_constraintStart_toStartOf="@+id/linearLayout4" />

        <ListView
            android:id="@+id/His_list"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="4dp"
            android:background="@color/amber_50"
            android:listSelector="@color/design_default_color_secondary_variant"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/linearLayout4"
            app:layout_constraintStart_toStartOf="@+id/linearLayout4"
            app:layout_constraintTop_toBottomOf="@+id/textViewHistory" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>